<?xml version="1.0" encoding="utf-8"?>
<!-- Quick Launch Section Layout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/quickLaunchSection"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:background="@android:color/darker_gray"
    android:padding="8dp">
    
    <TextView
        android:id="@+id/quickLaunchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quick_launch_section_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />
        
    <HorizontalScrollView
        android:id="@+id/quickLaunchScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        
        <LinearLayout
            android:id="@+id/quickLaunchContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" />
            
    </HorizontalScrollView>
    
</LinearLayout>